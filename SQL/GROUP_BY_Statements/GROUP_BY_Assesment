-----------------------------
-- GROUP BY Assesment test --
-----------------------------

-- 1. Return the customer IDs of customer who have spend at least 110$ 
	-- with the staff member 2

--SELECT customer_id,SUM(amount) FROM payment
WHERE staff_id = 2
GROUP BY customer_id
HAVING SUM(amount) > 110;

-- 2. How many films with the letter J?

SELECT COUNT(title) FROM film
WHERE title LIKE 'J%';

-- 3. What customer has a name starts with an E at the beggining
	-- and has an address ID lower than 500??
SELECT first_name, last_name, address_id FROM customer
WHERE first_name LIKE 'E%'
AND address_id < 500
GROUP BY first_name, last_name, address_id
ORDER BY address_id DESC
LIMIT 1


